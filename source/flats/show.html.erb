<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag "https://kitt.lewagon.com/placeholder/cities/#{flat.city_slug}", class: "img-city" %>
      <h3 class="flat-title"><%= flat.description %></h3>
      <p class="flat-city-name"><%= flat.city_name %></p>
    </div>
    <div class="col-md-3">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
      <p class="flat-name"><%= flat.name %></p>
    </div>
    <div class="col-md-3 info">
        <p>Details</p>
        <p class="flat-wifi">Wifi: <%= flat.wifi %></p>
        <p class="flat-rating">Rating: <%= flat.rating %></p>
        <p class="flat-bathroom">Bathroom: <%= flat.bathroom %></p>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <form action="#">
        <h4>Don't Delay! Book Now!</h4>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-6">
              <input type="text" class="form-control" placeholder="checkin" id="checkin">
            </div>
            <div class="col-xs-6">
              <input type="text" class="form-control" placeholder="checkout">
            </div>
          </div>
        </div>
        <div class="form-group">
          <select name="" id="guests" class="form-control">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
        </div>
        <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
      </form>
  </div>
  </div>
</div>
